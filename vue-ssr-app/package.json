{
  "name": "vue-ssr-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:app": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack/app.config.js",
    "dev:client": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack/client.config.js",
    "dev:server": "nodemon src/server/main.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:app": "rimraf ./public/app && cross-env NODE_ENV=production webpack --config build/webpack/app.config.js",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack/client.config.js",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack/server.config.js",
    "build": "rimraf ./public/ssr && npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node src/server/main.js",
    "demo": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack/demo.config.js",
    "lint": "eslint --ext .js --ext .vue src/client src/server",
    "lint:fix": "eslint --fix --ext .js --ext .vue src/client src/server",
    "precommit": "npm run lint:fix"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "axios": "^0.18.0",
    "ejs": "^2.6.1",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "vue": "^2.6.10",
    "vue-meta": "^1.6.0",
    "vue-router": "^3.0.3",
    "vue-server-renderer": "^2.6.10",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "autoprefixer": "^9.5.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-html": "^4.0.6",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "html-withimg-loader": "^0.1.16",
    "husky": "^1.3.1",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "memory-fs": "^0.4.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-require-alias": "^1.0.1",
    "nodemon": "^1.18.11",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "1.3.0",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  }
}
